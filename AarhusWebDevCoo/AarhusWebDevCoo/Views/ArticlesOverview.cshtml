@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ArticlesOverview>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<h1>@Umbraco.Field("articlesTitle")</h1>
<hr />
@Umbraco.Field("articlesBody")

<ul>
    @foreach (var article in Model.Children)
    {
        <li>
            <h4>@Umbraco.Field("articleTitle")</h4>
            <br />
            @@Umbraco.Field("articleContent")
        </li>
    }

</ul>
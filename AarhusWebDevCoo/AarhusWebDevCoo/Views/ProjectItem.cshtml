@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ProjectItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}

<div id="main-container">
    <div id="main" class="wrapper clearfix">
        <section>
            <h2>@Umbraco.Field("projectTitle")</h2>
            <p>@Umbraco.Field("projectDescription")</p>
            <p> </p>
            <p><strong>Status</strong>: @umbraco.library.GetPreValueAsString(Convert.ToInt32(Umbraco.Field("projectStatus").ToString()))</p>
        </section>
    </div> 
</div> 